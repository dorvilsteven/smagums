<main class="container-fluid">
  <div class="row">
    <section class="col-sm-12 col-md-4">
      <div class="container menu-form border">
        <form id="filter-form">
          {{!-- product type --}}
          <div class="product-type border-bottom mb-3 pb-3 d-md-block">
            <h3>Product Type</h3>
            <ul class="list-group">
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="shirts" />
                <label class="form-check-label" for="shirts">
                  Shirts
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="jackets" />
                <label class="form-check-label" for="jackets">
                  Jackets
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="bottoms" />
                <label class="form-check-label" for="bottoms">
                  Bottoms
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="shoes" />
                <label class="form-check-label" for="shoes">
                  shoes
                </label>
              </li>
            </ul>
          </div>
          {{!-- brand name --}}
          <div class="brand border-bottom mb-3 pb-3 d-md-block">
            <h3>Brand Name</h3>
            <ul class="list-group">
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="ASOS" />
                <label class="form-check-label" for="ASOS">
                  ASOS Designs
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="Vans" />
                <label class="form-check-label" for="Vans">
                  Vans
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="Nike" />
                <label class="form-check-label" for="Nike">
                  Nike
                </label>
              </li>
              <li class="list-group-item">
                <input class="form-check-input" type="radio" id="Lacoste" />
                <label class="form-check-label" for="Lacoste">
                  Lacoste
                </label>
              </li>
            </ul>
          </div>
          {{!-- form submit button --}}
          <button
            type="submit"
            class="btn btn-primary mb-3 d-md-block"
            id="form-submit"
          >Submit</button>
        </form>
      </div>
    </section>
    <section class="col-sm-12 col-md-8">
      <h1>products</h1>
      {{! display products here  }}
      <div id="products"></div>
    </section>
  </div>
</main>